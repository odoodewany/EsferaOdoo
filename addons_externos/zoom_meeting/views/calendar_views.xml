<odoo>
    <record id="zoom_view_calendar_event_form" model="ir.ui.view">
        <field name="name">zoom.inherit.form</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <button name="generate_meeting_link" type="object" string="Create Zoom meeting" class="m-1 btn-primary" attrs="{'invisible': [('meeting_id', '!=', False)]}"/>
                <button name="start_zoom_meeting" type="object" string="Start Zoom meeting" class="m-1 btn-primary" attrs="{'invisible': ['|',('meeting_id', '=', False),('start_meeting_url', '=', False)]}"/>
                <button name="update_meeting" type="object" string="Update Zoom meeting" class="m-1 btn-success" attrs="{'invisible': [('meeting_id', '=', False)]}"/>
                <button name="delete_meeting" type="object" string="Delete Zoom meeting" class="m-1 btn-danger" attrs="{'invisible': [('meeting_id', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Zoom Meeting Description" name="meeting">
                    <group name="Meeting Description">
                        <field name="meeting_id" invisible="True"/>
                        <field name="start_meeting_url" invisible="True"/>
                        <field name="zoom_description"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>
